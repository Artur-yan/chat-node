generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model AuthUser {
  id                 String        @id @unique
  email              String        @unique
  stripe_customer_id String?       @unique
  current_plan       String        @default("FREE")
  remaining_msg      Int           @default(30)
  auth_key           AuthKey[]
  auth_session       AuthSession[]
  bots               Bots[]

  @@map("auth_user")
}

model AuthSession {
  id             String   @id @unique
  user_id        String
  active_expires BigInt
  idle_expires   BigInt
  auth_user      AuthUser @relation(fields: [user_id], references: [id], onDelete: Cascade)

  @@index([user_id])
  @@map("auth_session")
}

model AuthKey {
  id              String   @id @unique
  hashed_password String?
  user_id         String
  primary_key     Boolean
  expires         BigInt?
  auth_user       AuthUser @relation(fields: [user_id], references: [id], onDelete: Cascade)

  @@index([user_id])
  @@map("auth_key")
}

model Bots {
  id               String   @id @unique
  created          DateTime @default(now())
  data_source_type String
  user_id          String
  name             String?
  settings         Json?
  auth_user        AuthUser @relation(fields: [user_id], references: [id])

  @@map("bots")
}
